<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/css/bootstrap.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <title>@ViewBag.Title</title>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js">
    </script>
</head>
<body >
    <div class="bg-warning row justify-content-center align-items-center pt-3 pb-3">
        <div class=" col-8" >
            <h4>@ViewBag.Title</h4>
        </div>
        <div class=" col-1">
            <a class="btn btn-sm btn-primary"
               asp-action="Logout" asp-controller="Account">@Localizer["Logout"]</a>
        </div>
    </div>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success ">@TempData["message"]</div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-8"><p style="padding-top:17px">&copy; 2022 - P3AddNewFunctionalityDotNetCore</p></div>
                <div class="col-4">
                    @await Component.InvokeAsync("LanguageSelector")
                </div>
            </div>
        </footer>
    </div>
</body>
</html>